(comment
  (debug tap-values
    (ansible-local* "render ansible-playbook:main.yml" {::bc/env :repl
                                                        ::workflow/params {:ip "159.223.11.241"}
                                                        ::run/shell-opts {:err *err*
                                                                          :out *out*}}))
  (-> tap-values))

